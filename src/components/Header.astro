---
const theme = "light"; // Default theme (if you don't want to use Astro.site.theme)
---

<header class="bg-white dark:bg-gray-800 shadow-md p-4">
  <div class="flex justify-between items-center container mx-auto">
    <!-- Logo -->
    <div class="text-2xl font-bold text-gray-800 dark:text-white">
      <a href="/" class="flex items-center">
        <img
          src="https://img.icons8.com/fluency/96/tea.png"
          alt="Logo"
          class="h-8 w-auto mr-2"
        />
        ChaiCode Cohort
      </a>
    </div>

    <!-- Spacer to push GitHub Handle to the right -->
    <div class="flex-1"></div>

    <!-- GitHub Handle (Visible on mobile as well) -->
    <div class="text-sm text-gray-600 dark:text-gray-400">
      <a
        href="https://github.com/your-github-handle"
        target="_blank"
        rel="noopener noreferrer"
        class="hover:underline"
      >
        <img
          src="https://img.icons8.com/3d-fluency/94/github.png"
          alt="GitHub"
          class="h-8 w-auto mr-2"
        />
      </a>
    </div>
  </div>
</header>
